        "path_log": "string", "file_log": "string", "path_tmp": "string",
        "execution_name": "string", "execution_mode": "string"
      }
    },
    "application": {
      "info": {
        "domain_name": "{domain_name}"
      },
      "time": {
        "start": "{time_start}",
        "end": "{time_end}",
        "frequency": "D",
        "format": "%Y%m%d"
      },
      "geo": {
        "terrain": {
          "path": "{path_geo}",
          "file_name": "{domain_name}.dem.txt"
        }
      },
      "data_source": {
        "rain": {
          "path": "{path_source_by_s3m}/%Y/",
          "file_name": "REFF_{time_source}.nc"
        },
        "air_t": {
          "path": "{path_source_by_bc}/%Y/",
          "file_name": "T_{time_source}.nc"
        },
        "rh": {
          "path": "{path_source_by_bc}/%Y/",
          "file_name": "U_{time_source}.nc"
        },
        "inc_rad": {
          "path": "{path_source_by_bc}/%Y/",
          "file_name": "R_{time_source}.nc"
        },
        "wind": {
          "path": "{path_source_by_bc}/%Y/",
          "file_name": "V_{time_source}.nc"
        }
      },
      "data_destination": {
        "path": "{path_destination}/%Y/%m/%d/",
        "file_name": "hmc.forcing-grid.{time_destination}.nc",
        "format": "netcdf", "type": "hmc", "mode": "grid"
      },
      "log": {
        "path": "{path_log}",
        "file_name": "example_converter_hmc_forcing.txt"
      },
      "tmp": {
        "path": "{path_tmp}",
        "file_name": null
      }
    }
  }
