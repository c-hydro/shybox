{
  "__comment__": "configuration file for the datasets information",
  "configuration": {
    "priority": {
      "reference": "environment", "other": "user"
    },
    "flags": {
      "update_namelist": true, "update_execution": true
    },
    "variables": {
      "lut": {
        "user": {
          "path_time_source": null, "path_time_destination": null,
          "time_rounding": "H", "time_frequency": "H",  "time_direction": "forward",
          "file_log": "{execution_name}_{domain_name}.log",
          "execution_name": "analyzer_time_series_hmc", "execution_mode": "history"
        },
        "environment": {
          "domain_name": "DOMAIN_NAME",
          "path_geo": "PATH_GEO",
          "path_dynamic_source": "PATH_SRC", "path_dynamic_destination": "PATH_DST",
          "file_time_source": "TIME_RUN", "file_time_destination": "TIME_RUN",
          "time_run": "TIME_RUN", "time_period" : "TIME_PERIOD",
          "path_app": "PATH_APP",
          "path_log": "PATH_LOG", "path_tmp": "PATH_TMP"
        }
      },
      "format": {
        "domain_name": "string",
        "path_geo": "string",
        "path_dynamic_source": "string", "path_dynamic_destination": "string",
        "path_time_source": "string", "path_time_destination": "string",
        "file_time_source": "timestamp", "file_time_destination": "timestamp",
        "time_direction": "string", "time_run": "string",
        "time_period": "int", "time_rounding": "string", "time_frequency": "string",
        "path_app": "string",
        "path_log": "string", "file_log": "string",
        "path_tmp": "string",
        "execution_name": "string", "execution_mode": "string"
      },
      "template": {
        "domain_name": "string",
        "path_geo": "string",
        "path_dynamic_source": "string", "path_dynamic_destination": "string",
        "path_time_source": "%Y/%m/%d", "path_time_destination": "%Y/%m/%d",
        "file_time_source": "%Y%m%d%H00", "file_time_destination": "%Y%m%d%H00",
        "time_direction": "string", "time_run": "%Y%m%d%H00",
        "time_period": "int", "time_rounding": "string", "time_frequency": "string",
        "path_app": "string",
        "path_log": "string", "file_log": "string",
        "path_tmp": "string",
        "execution_name": "string", "execution_mode": "string"
      }
    }
  },
  "application": {
    "time": {
      "start": "{time_run}",
      "end": "{time_run}",
      "frequency": "H",
      "format": "%Y-%m-%d %H:%M",
      "analysis": "{time_period}",
      "dataset": "{time_period}"
    },
    "static_data": {
      "registry_sections": {
        "path": "{path_geo}/ItalyDomain/",
        "file_name": "sections_italia_FloodPROOFS_Aggiornamento_soglie20250926.csv"
      },
      "registry_hmc": {
        "path": "{path_geo}/{domain_name}/point/",
        "file_name": "{domain_name}.info_section.txt"
      }
    },
    "dynamic_data_src": {
      "path": "{path_dynamic_source}/{domain_name}/{path_time_source}/time_series/",
      "file_name": "hmc.hydrograph.txt"
    },
    "dynamic_data_dst": {
      "path": "{path_dynamic_destination}/{domain_name}/{path_time_destination}/time_series/",
      "file_name": "hmc.hydrograph_{file_time_destination}.nc",
      "format": "netcdf",
      "type": null,
      "mode": "time_series",
      "variable": ["discharge"],
      "dims_data": {"time": "time", "sections": "sections"},
      "vars_data": {"discharge": "discharge"}
    }
  },
  "workflow": {
    "options": {
        "intermediate_output": "Tmp",
        "tmp_dir": "{path_tmp}"
    },
    "process_list": {
        "DISCHARGE": [
            {"function": "join_time_series_by_registry", "fill_value": -9999, "no_data_value": -9999}
        ]
    }
  },
  "log": {
    "path": "{path_log}/{domain_name}", "file_name": "analyzer_time_series_hmc.txt",
    "handlers": ["file","stream"]
  },
  "tmp": {
    "path": "{path_tmp}/{domain_name}",
    "file_name": null
  }
}
